{
  "name": "@ultrapacer/core",
  "version": "0.0.0",
  "description": "ultraPacer is a web app for creating courses and pacing plans for ultramarathons and trail adventures that factor in grade, terrain, altitude, heat, and fatigue.",
  "author": "Danny Murphy <danny@ultrapacer.com>",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "require": "./dist/main.cjs"
    }
  },
  "main": "./dist/main.cjs",
  "module": "./dist/main.js",
  "typings": "./dist/main.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "build:watch": "tsc && vite build --watch",
    "dev": "vite",
    "lint": "eslint ./src",
    "lint-fix": "eslint ./src --fix",
    "format": "prettier --write ./src",
    "test": "vitest",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "debug": "^4.4.0",
    "lodash": "^4.17.21",
    "sgeo": "^0.0.6",
    "sprintf-js": "^1.1.3",
    "suncalc": "^1.9.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/debug": "^4.1.12",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.10.2",
    "@types/sprintf-js": "^1.1.4",
    "@types/suncalc": "^1.9.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-tsdoc": "^0.4.0",
    "prettier": "^3.4.2",
    "rollup-plugin-typescript-paths": "^1.5.0",
    "supports-color": "^9.4.0",
    "tsdoc": "^0.0.4",
    "tslib": "^2.8.1",
    "typedoc": "^0.27.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.0",
    "vite": "^6.0.5",
    "vitest": "^2.1.8"
  }
}
