{
  "name": "@ultrapacer/core",
  "version": "0.0.0",
  "description": "ultraPacer is a web app for creating courses and pacing plans for ultramarathons and trail adventures that factor in grade, terrain, altitude, heat, and fatigue.",
  "author": "Danny Murphy <danny@ultrapacer.com>",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "require": "./dist/main.cjs"
    }
  },
  "main": "./dist/main.cjs",
  "module": "./dist/main.js",
  "typings": "./dist/main.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "build:watch": "tsc && vite build --watch",
    "dev": "vite",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
    "format": "prettier --write ./",
    "test": "vitest",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "debug": "^4.3.7",
    "lodash": "^4.17.21",
    "sgeo": "^0.0.6",
    "sprintf-js": "^1.1.3",
    "suncalc": "^1.9.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.1.0",
    "@types/debug": "^4.1.12",
    "@types/lodash": "^4.17.10",
    "@types/node": "^22.7.5",
    "@types/sprintf-js": "^1.1.4",
    "@types/suncalc": "^1.9.2",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-tsdoc": "^0.3.0",
    "prettier": "^3.3.3",
    "rollup-plugin-typescript-paths": "^1.5.0",
    "supports-color": "^9.4.0",
    "tslib": "^2.7.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.8",
    "vitest": "^2.1.2"
  }
}
